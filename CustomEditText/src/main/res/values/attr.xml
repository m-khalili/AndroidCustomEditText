    </declare-styleable>

    <declare-styleable name="Password">
        <attr name="hintIcon"/>
        <attr name="hintText"/>
        <attr name="set_text"/>

    </declare-styleable>

    <declare-styleable name="Username">
        <attr name="hintIcon"/>
