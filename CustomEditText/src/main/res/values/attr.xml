    </declare-styleable>

    <declare-styleable name="EmailAddress">
        <attr name="hintIcon"/>
        <attr name="hintText"/>
        <attr name="set_text"/>
    </declare-styleable>

    <declare-styleable name="PhoneNumber">
        <attr name="hintText"/>
        <attr name="set_text"/>
